// http://cspell.org/configuration/
{
    "version": "0.2",
    "language": "en,en-US",
    "useGitignore": true,
    "minWordLength": 4,
    "ignorePaths": [
        "target/**",
        "**.conf",
        "**.j2",
        "**.json",
        "**.proto",
        "**.ps1",
        "**.rs",
        "**.toml",
        "**.txt",
        "**.yaml",
        "Dockerfile",
        "Makefile"
    ],
    "patterns" :[
        {
            "name": "CodeBlock",
            "pattern": "/^(\\s*[~`]{3,}).*?[\\s\\S]*?\\1/igmx"
        },
        {
            "name": "CodeName",
            "pattern": "/([~`])[^~`]*?\\1/x"
        }
    ],
    // list of words to be ignored.  unlike `words` below, these won't be
    // suggested as corrections for misspelled words.
    "ignoreWords": [
        "otel",
        "rustdoc",
        "rustfilt"
    ],
    // these are words that are always considered incorrect.
    "flagWords": [
        "recieve",
        "reciever",
        "seperate",
        "hte",
        "teh"
    ],
    "dictionaries": [
        "companies",
        "people-names",
        "rust",
        "software-tools",
        "softwareTerms"
    ],
    // these are words that are always correct and can be thought of as our
    // workspace dictionary.
    "words": [
        "francoposa",
        "semconv",
        "traceresponse",
        "tracepoint",
        "tracepoints",
        // people names
        "Bhasin",
        "Boddewyn",
        "Cijo",
        "Dirkjan",
        "Grübel",
        "Isobel",
        "Kumar",
        "Kühle",
        "Lalit",
        "Ochtman",
        "Pato",
        "Posa",
        "Redelmeier",
        "Sandaña",
        "Tescher",
        "Zhongyang",
        //software tools
        "ftrace",
        "Logman",
        "PerfView",
        "StackDriver",
        "Tracefmt",
        "Tracelog",
        // software terms
        "msgpack",
        "PKCS",
        "unregisters",
        //rust
        "Actix",
        "EventHeader",
        "Prost",
        "Reqwest",
        "hyper-rustls",
        "itertools",
        "mvrv",
        "thiserror",
        "tracelogging"
    ],
    "enabledLanguageIds": [
        "jsonc",
        "markdown",
        "plaintext",
        "rust",
        "shellscript"
    ],
    "languageSettings": [
        {
            "languageId": "jsonc",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "markdown",
            "caseSensitive": false,
            "ignoreRegExpList": [
                "CodeBlock",
                "CodeName"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment",
                "strings"
            ]
        },
        {
            "languageId": "shellscript",
            "includeRegExpList": [
                "/#.*/g"
            ]
        }
    ]
}
