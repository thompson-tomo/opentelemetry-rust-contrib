// http://cspell.org/configuration/
{
    "version": "0.2",
    "language": "en,en-US",
    "useGitignore": true,
    "minWordLength": 4,
    "import": ["https://cdn.jsdelivr.net/npm/@cspell/dict-people-names/cspell-ext.json"],
    "ignorePaths": [
        "target/**",
        "**/src/proto/**",
        "**.proto"
    ],
    "patterns" :[
        {
            "name": "CodeBlock",
            "pattern": "/^(\\s*[~`]{3,}).*?[\\s\\S]*?\\1/igmx"
        },
        {
            "name": "CodeName",
            "pattern": "/([~`])[^~`]*?\\1/gmx"
        }
    ],
    // list of words to be ignored.  unlike `words` below, these won't be
    // suggested as corrections for misspelled words.
    "ignoreWords": [
        "basicauth",
        "errno",
        "francoposa",
        "myprovider",
        "nocapture",
        "otel",
        "providername",
        "rustdoc",
        "rustfilt",
        "eastus",
        "westus",
        "myrolename",
        "myns",
        "myaccount",
        "myattribute",
        "_csver_",
        "num_cpus",
        "sharedlib",
        "bincirc"
    ],
    // these are words that are always considered incorrect.
    "flagWords": [
        "recieve",
        "reciever",
        "seperate",
        "hte",
        "teh"
    ],
    "dictionaries": [
        "companies",
        "google",
        "people-names",
        "rust",
        "rust-crates",
        "software-tools",
        "softwareTerms"
    ],
    // these are words that are always correct and can be thought of as our
    // workspace dictionary.
    "words": [
        "semconv",
        "eventname",
        "traceresponse",
        "traceparent",
        "tracepoint",
        "tracepoints",
        "tracestate",

        "rustc",
        "rcgen",
        "repr",
        "cbindgen"
    ],
    "enabledLanguageIds": [
        "dockerfile",
        "json",
        "jsonc",
        "markdown",
        "rust",
        "shellscript",
        "toml",
        "yaml"
    ],
    "languageSettings": [
        {
            "languageId": "json, jsonc",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "markdown",
            "caseSensitive": false,
            "ignoreRegExpList": [
                "CodeBlock",
                "CodeName"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment",
                "strings"
            ],
            "ignoreRegExpList": [
                "CodeName"
            ]
        },
        {
            "languageId": "dockerfile, makefile, powershell, properties, shellscript, toml, yaml",
            "includeRegExpList": [
                "/#.*/g"
            ]
        }
    ]
}
